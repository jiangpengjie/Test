<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:key="screen_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Screen resolution"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <CheckBoxPreference
            android:key="auto_resolution"
            android:title="@string/screen_resolution_best"
            android:summaryOn="on"
            android:summaryOff="off"
            android:defaultValue="true"
            >
    </CheckBoxPreference>
    <ListPreference
            android:key="resolutionListPreference"
            android:title="@string/screen_resolution_selection"
            android:entries="@array/list_entries"
            android:entryValues="@array/list_entries_values"
            android:dialogTitle="@string/screen_resolution_selection"
            android:defaultValue="1080p-60hz"
            >
    </ListPreference>

</PreferenceScreen> 
